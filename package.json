{
    "name": "whylearn",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently -k -s first -n api,web \"npm:dev:api\" \"npm:dev:web\"",
        "dev:api": "tsx watch src/server.ts",
        "dev:web": "npm --prefix apps/web run dev",
        "build": "npm --prefix apps/web run build && tsc",
        "start": "concurrently -k -s first -n api,web \"npm:start:api\" \"npm:start:web\"",
        "start:api": "node dist/server.js",
        "start:web": "npm --prefix apps/web run start",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "npm --prefix apps/web run lint",
        "lint:web": "npm --prefix apps/web run lint",
        "build:api": "tsc",
        "data:migrate": "tsx src/cli/data/index.ts migrate",
        "data:validate": "tsx src/cli/data/index.ts validate",
        "data:backup": "tsx src/cli/data/index.ts backup",
        "data:export": "tsx src/cli/data/index.ts export",
        "data:import": "tsx src/cli/data/index.ts import",
        "test:e2e": "playwright test",
        "test:lighthouse": "lhci autorun"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "dependencies": {
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "helmet": "^8.1.0",
        "next": "^15.5.3",
        "nodemailer": "^7.0.6",
        "pino": "^9.9.5",
        "stripe": "^18.5.0",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@lhci/cli": "^0.13.0",
        "@playwright/test": "^1.49.1",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/express": "^5.0.3",
        "@types/node": "^24.4.0",
        "@types/supertest": "^6.0.3",
        "concurrently": "^9.2.1",
        "happy-dom": "^18.0.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "supertest": "^7.1.4",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
